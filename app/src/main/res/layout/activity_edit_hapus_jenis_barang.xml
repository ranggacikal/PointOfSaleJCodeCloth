<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditHapusJenisBarangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/iconjenisbarang"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Jenis Barang : "
                android:layout_marginRight="15dp"
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/text_id_jenis_barang_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <EditText
            android:id="@+id/edt_edithapus_jenis_barang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Jenis Barang"
            android:inputType="text"
            android:paddingLeft="15dp"/>

        <Button
            android:id="@+id/btn_update_jenis_barang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle1"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:text="UPDATE JENIS BARANG"
            android:textColor="#fff"
            android:textStyle="bold"/>

<!--        <Button-->
<!--            android:id="@+id/btn_hapus_jenis_barang"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:background="@drawable/rectangle2"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginRight="35dp"-->
<!--            android:layout_marginLeft="35dp"-->
<!--            android:text="HAPUS JENIS BARANG"-->
<!--            android:textColor="#fff"-->
<!--            android:textStyle="bold"/>-->

    </LinearLayout>
</ScrollView>