<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:background="@drawable/background_header_home">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_nama_user_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAMA LENGKAP USER"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_email_user_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="namauser@gmail.com"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_level_user_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_home"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/userlogo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#fff"/>

                <Button
                    android:id="@+id/btn_logout_kasir"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/rectangle2"
                    android:layout_marginTop="15dp"
                    android:text="Logout"
                    android:textColor="#fff"
                    android:textStyle="bold"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:id="@+id/linear_pos"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_home"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/cashier"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaksi"
                    android:layout_marginTop="10dp"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_stock"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_home2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/stock"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cek Stock"
                    android:layout_marginTop="10dp"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:id="@+id/linear_laporan"
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_home2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/laporan"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>