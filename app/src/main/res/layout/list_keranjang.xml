<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_list_keranjang"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logojcodefix" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Kode Barang:"
                    android:textColor="#1f2837"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_list_kode_barang_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Kode Barang"
                    android:textColor="#1f2837"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang :"
                    android:textColor="#1f2837"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_list_nama_barang_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Ukuran :"
                    android:textColor="#1f2837"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_list_ukuran_barang_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="SMLXL"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Harga :"
                    android:textColor="#1f2837"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_list_harga_barang_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Rp.00000"
                    android:textColor="#1f2837"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Barang :"
                    android:textColor="#1f2837"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_list_jumlah_barang_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="1/2/3"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Total :"
                    android:textColor="#1f2837"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_list_total_keranjang"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Rp.0000"
                    android:textColor="#1f2837"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>