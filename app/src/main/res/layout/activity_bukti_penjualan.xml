<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuktiPenjualanActivity">

    <LinearLayout
        android:id="@+id/linear_kwitansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logojcodefix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="J-CODE CLOTHING"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Custom sablon baju, jaket, hoodie, topi, DLL"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email : jcodecloth@gmail.com"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BUKTI PEMBELIAN"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:text="Kode Barang"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Nama Barang"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Ukuran"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Jumlah"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Total Harga"
                android:textSize="10sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_bukti_pembelian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/text_total_bukti_penjualan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.0000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimaryDark"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cetak_bukti"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="PRINT BUKTI PEMBELIAN"
        android:textColor="#fff"
        android:textStyle="bold"/>

</LinearLayout>