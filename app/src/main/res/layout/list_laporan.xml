<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/txt_id_penjualan_laporan"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:text="70100084"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_tanggal_penjualan_laporan"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:text="22-Agustus-2020"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_total_penjualan_laporan"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:text="Rp. 150000"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_detail_barang_laporan"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:text="Detail"
        android:textColor="#fff"
        android:textSize="10sp"
        android:background="@drawable/rectangle1"
        android:textStyle="bold"
        android:gravity="center"/>


</LinearLayout>